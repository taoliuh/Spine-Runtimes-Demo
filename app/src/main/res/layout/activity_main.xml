<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.lancer.spineruntimesdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_spine_boy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_light"
            android:text="SpineBoy(Animation)"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_goblin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_light"
            android:text="Goblin(Skin)"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_raptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_light"
            android:text="Raptor"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_mix_and_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_light"
            android:text="MixAndMatch"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_dragon_youth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_light"
            android:text="DragonYouth"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
